<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.postMapper.xml">
	<resultMap type="postVO" id="postResult">
		<result property="pid" column="pid"/>
		<result property="title" column="title"/>
		<result property="byname" column="byname"/>
		<result property="regdate" column="regdate"/>
		<result property="content" column="content"/>
		<result property="visible" column="visible"/>
		<result property="tagid" column="tagid"/>
	</resultMap>
	
<select id="selectAll" resultMap="postResult">
	<![CDATA[
	select * from post
	]]>
</select>

<select id="selectOne" resultMap="postResult" parameterType="int">
	<![CDATA[
		select * from post
		where pid = #{pid}
	]]>
</select>

<insert id="insert" parameterType="postVO">
	<![CDATA[
		insert into post(title,byname,regdate,content,visible)
		values(#{title},#{byname},#{regdate},#{content},#{visible})
	]]>
</insert>

<update id="update " parameterType="postVO">
	<![CDATA[
		update post set
		title = #{title},
		byname = #{byname},
		regdate = #{regdate},
		content = #{content},
		visible = #{visible}
		where pid = #{pid}
	]]>
</update>

<delete id="delete" parameterType="int">
	<![CDATA[
		delete from post
		where pid = #{pid}
	]]>
</delete>
</mapper>